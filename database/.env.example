# Database Configuration
# Copy this file to .env and update the values

# Development Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geotagging_usaha_dev
DB_USER=postgres
DB_PASSWORD=your_password_here

# Production Database (for deployment)
DB_HOST_PROD=your_production_host
DB_PORT_PROD=5432
DB_NAME_PROD=geotagging_usaha_prod
DB_USER_PROD=your_prod_user
DB_PASSWORD_PROD=your_prod_password

# Test Database
DB_HOST_TEST=localhost
DB_PORT_TEST=5432
DB_NAME_TEST=geotagging_usaha_test
DB_USER_TEST=postgres
DB_PASSWORD_TEST=your_test_password

# SSL Configuration (for production)
DB_SSL_REQUIRE=false
DB_SSL_REJECT_UNAUTHORIZED=false

# Connection Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Backup Settings
BACKUP_RETENTION_DAYS=7
BACKUP_ENCRYPT=false
BACKUP_S3_BUCKET=your_backup_bucket
BACKUP_S3_REGION=us-east-1

# Application Settings
NODE_ENV=development
APP_PORT=3000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=24h
REFRESH_TOKEN_EXPIRE=7d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@bps-pematangsiantar.go.id

# Redis Configuration (for caching and sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true
