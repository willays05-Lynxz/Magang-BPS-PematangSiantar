# Environment Configuration untuk Laragon
# Copy file ini ke root project sebagai .env

# Database Configuration (Laragon PostgreSQL Default)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geotagging_usaha_dev
DB_USER=postgres
DB_PASSWORD=
DB_SSL=false

# Test Database
DB_HOST_TEST=localhost
DB_PORT_TEST=5432
DB_NAME_TEST=geotagging_usaha_test
DB_USER_TEST=postgres
DB_PASSWORD_TEST=

# Next.js Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-laragon-development
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-laragon
SESSION_MAX_AGE=86400000

# Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=public/uploads
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (untuk development)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
SMTP_FROM=noreply@bps-pematangsiantar.go.id

# Development Settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# Laragon Specific
LARAGON_ROOT=C:\laragon
LARAGON_BIN=C:\laragon\bin
DATABASE_URL=postgresql://postgres@localhost:5432/geotagging_usaha_dev

# API Configuration
API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30000

# Map Configuration (untuk fitur peta)
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_token_here
NEXT_PUBLIC_DEFAULT_LAT=2.9641
NEXT_PUBLIC_DEFAULT_LNG=99.0687
NEXT_PUBLIC_MAP_ZOOM=13

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=public/uploads

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Development Tools
NEXT_TELEMETRY_DISABLED=1
GENERATE_SOURCEMAP=true
